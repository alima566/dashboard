<%- include('blocks/header', {bot, user, path, creator}) %>
<div class="jumbotron" id="homepage">
    <div>
        <h1><%= bot.user.username %> Dashboard</h1>
        <p class="lead" id="description">
            <% if(bot.application.description.length > 3) { %>
                Beep boop, I'm <%= bot.user.username %>!
                <br/><br/>
                <%= bot.application.description %>
            <% } else { %>No description given.<% }%>
        </p>
        <p class="lead">
            <a class="btn btn-primary" href="/commands" role="button">Commands</a>
        </p>
    </div>
</div>
<%- include('blocks/footer', {bot, user, path, creator}) %>